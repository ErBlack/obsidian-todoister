{
	"name": "obsidian-todoister-plugin",
	"version": "1.9.2",
	"description": "Sync all todo from active file between Obsidian and Todoist.",
	"type": "module",
	"main": "main.js",
	"scripts": {
		"prepare": "husky",
		"build": "node build.js",
		"start": "node build.js --watch",
		"lint": "biome check . && eslint .",
		"format": "biome format --write .",
		"fix": "biome check --write --unsafe . && eslint . --fix",
		"test": "vitest run",
		"typecheck": "tsgo --noEmit"
	},
	"keywords": [
		"obsidian",
		"obsidian-plugin",
		"todoist",
		"sync",
		"tasks"
	],
	"author": "erblack",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@doist/todoist-api-typescript": "^6.2.1",
		"@tanstack/query-core": "^5.90.12",
		"@tanstack/query-persist-client-core": "^5.91.11",
		"@types/node": "^24.10.4",
		"@typescript-eslint/parser": "^8.53.0",
		"@typescript/native-preview": "^7.0.0-dev.20260118.1",
		"esbuild": "^0.27.1",
		"eslint": "^9.39.2",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"husky": "^9.1.7",
		"nano-staged": "^0.9.0",
		"obsidian": "^1.11.4",
		"vitest": "^4.0.15"
	},
	"nano-staged": {
		"*.{ts,tsx,js,jsx,json,md}": "biome check --write --no-errors-on-unmatched"
	}
}
